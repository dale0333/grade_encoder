{
  "manifest_version": 3,
  "name": "ADSJ Grade encoder",
  "version": "3.2",
  "description": "Auto-encode grades in the AIMS grading sheet from Excel. Green button appears bottom-right.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": [
    "https://sis.fatima.edu.ph/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://sis.fatima.edu.ph/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["xlsx.min.js", "encoder.js"],
      "matches": ["https://sis.fatima.edu.ph/*"]
    }
  ],
  "icons": {
    "16":  "icons/icon16.png",
    "48":  "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "ADSJ Grade encoder",
    "default_icon": "icons/icon48.png"
  }
}
